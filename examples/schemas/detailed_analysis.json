{
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "description": "Brief summary of the evaluation",
      "maxLength": 200
    },
    "scores": {
      "type": "object",
      "properties": {
        "technical_accuracy": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Technical accuracy on scale 1-5"
        },
        "communication_clarity": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Communication clarity on scale 1-5"
        },
        "depth_of_insight": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Depth of insight on scale 1-5"
        }
      },
      "required": ["technical_accuracy", "communication_clarity", "depth_of_insight"],
      "additionalProperties": false
    },
    "analysis": {
      "type": "object",
      "properties": {
        "key_points": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Key points identified in the response"
        },
        "missing_elements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Important elements that were missing"
        },
        "potential_improvements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Suggestions for improvement"
        }
      },
      "required": ["key_points"],
      "additionalProperties": false
    },
    "overall_rating": {
      "type": "string",
      "enum": ["excellent", "good", "satisfactory", "needs_improvement", "poor"],
      "description": "Overall categorical rating"
    },
    "detailed_feedback": {
      "type": "string",
      "description": "Detailed written feedback",
      "minLength": 50
    }
  },
  "required": ["summary", "scores", "analysis", "overall_rating", "detailed_feedback"],
  "additionalProperties": false
}
